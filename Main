import javax.swing.*;

public class HelloGraphicsMain {
    public static void main(String[] args) {
        JFrame frame = new JFrame("Hello Graphics");
        HelloGraphicsComponent helloGraphicsComponent = new HelloGraphicsComponent();
        frame.add(helloGraphicsComponent);
        frame.setSize(800,600 );
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setVisible(true);
        frame.setTitle("Dylan Hansen");

    } // end of main
} // end of class
